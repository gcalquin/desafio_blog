<% if @post.errors.any? %>
   <div id="create_posts">
       <h2>
          Errores Encontrados <%= pluralize(@post.errors.count, "") %>
          <br>
          <br>
          No se puede guardar el registro ... Que penita...
        </h2>
        <ul>
           <% @post.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
        </ul>
    </div>
<% else %>
   <h1>Registro exitoso...</h1>
   <h2>Felicitaciones...</h2>
<% end %>

<button type="button"><%= link_to "Volver", :back %> </button>
<button type="button"><%= link_to "Ir al Posteos", root_path %></button>

